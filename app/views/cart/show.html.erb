<% if @cart != nil %>
  <% @items.each do |item| %>
    <div>
      <p> Name: <%= item.name %> </p>
      <p> Price: <%= item.price %> </p>
      <p> Quantity: <%= item.quantity %> </p>
      </div><br>
  <% end %>
<% else %>
	<p>You have no items in your cart</p>
<% end %>

<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: â‚¬<%= @cart.total_amount %></span>
    </label>
  </article>
  <%= hidden_field_tag "id", @cart.total_amount %>
  <%= hidden_field_tag "cart_id", @cart.id %>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Lumumba Fashion Marketplace Purchase"
          data-amount= '<%= @cart.total_amount * 100 %>'
          data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
          data-name="Lumumba Technologies"
          data-email= '<%= @cart.user.email %>'
          data-zip-code= "true"
          data-currency= "eur"
          data-shipping-address= "true"
          data-locale="auto"></script>
<% end %>