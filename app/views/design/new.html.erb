<div class="row centered-form">
	<div class="panel panel-default">
	    <div class="panel-body">
			<%= form_for @design, url: {action: "create"}, html: {class: "panel-body", multipart: true} do |f| %>
			<div>
			  <%= f.label :name %>
			  <%= f.text_field :name %>
			</div>

			<div>
			  <%= f.label :description %>
			  <%= f.text_area :description %>
			</div>

			<div>
			  <%= f.label :image %>
			  <%= f.file_field :image %>
			</div>

			<div>
			  <%= f.label :price %>
			  <%= f.number_field :price %>
			</div>

			<div>
			  <%= f.submit "Create" %>
			</div>
			<% end %>
		</div>
	</div>	
</div>