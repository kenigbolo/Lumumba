<%= form_for @design, url: {action: "create"}, html: {class: "nifty_form", multipart: true} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit "Create" %>
<% end %>